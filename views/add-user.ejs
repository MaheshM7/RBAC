<%- include('./layouts/header') %>
<link rel="stylesheet" href="/add-user.css">
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add User</title>
  <link rel="stylesheet" href="/css/add-user.css"> <!-- Link to CSS -->
</head>
<body>
  <div class="container">
    <h1>Add User</h1>
    <form action="/admin/add-user" method="POST" class="add-user-form">
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" required>

      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>

      <label for="password">Password:</label> <!-- New Password Field -->
      <input type="password" id="password" name="password" required minlength="6" placeholder="Enter at least 6 characters">

      <label for="role">Role:</label>
      <select id="role" name="role">
        <option value="ADMIN">Admin</option>
        <option value="MODERATOR">Moderator</option>
        <option value="CLIENT">Client</option>
      </select>

      <button type="submit" class="btn-submit">Add User</button>
    </form>
  </div>
</body>
</html>
<%- include('./layouts/footer') %>
